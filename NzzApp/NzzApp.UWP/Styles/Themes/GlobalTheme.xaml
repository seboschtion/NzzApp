<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- Custom -->
    <SolidColorBrush x:Key="ThemeBrush" Color="{StaticResource BlueTheme1}"/>
    <SolidColorBrush x:Key="DarkerThemeBrush" Color="{StaticResource BlueTheme2}"/>
    <SolidColorBrush x:Key="PivotHeaderItemBrush" Color="{StaticResource Gray20}"/>
    <SolidColorBrush x:Key="DashedLineBrush" Color="{StaticResource Gray20}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource Red1}"/>
    <SolidColorBrush x:Key="DarkerWarningBrush" Color="{StaticResource Red2}"/>

    <!-- Overrides -->
    <!-- https://msdn.microsoft.com/en-us/library/windows/apps/dn518235.aspx -->
    <SolidColorBrush x:Key="SystemControlForegroundAccentBrush" Color="{StaticResource BlueTheme1}"/>
    <SolidColorBrush x:Key="SystemControlHighlightAccentBrush" Color="{StaticResource BlueTheme1}"/>
    <SolidColorBrush x:Key="SystemControlHighlightBaseMediumBrush" Color="{StaticResource BlueTheme2}"/>
    <SolidColorBrush x:Key="SystemControlHighlightListAccentHighBrush" Color="{StaticResource BlueTheme3}"/>

</ResourceDictionary>
